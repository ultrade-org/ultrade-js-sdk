{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "paths": {
      "@utils": [
        "./utils/index.ts"
      ],
      "@interface": [
        "./interface/index.ts"
      ],
      "@const": [
        "./const/index.ts"
      ],
      "@enum": [
        "./enum/index.ts"
      ],
      "@argsAsObj": [
        "./argsAsObj/index.ts"
      ]
    },
    "declarationMap": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}